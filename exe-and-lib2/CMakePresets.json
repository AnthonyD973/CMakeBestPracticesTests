{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25
	},
	"include": [
		"../CMakePresetsBase.json"
	],
	"configurePresets": [
		{
			"name": "project-base",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_PREFIX_PATH": "${sourceDir}/../install",
				"lib2_BUILD_WITH_PIC": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "ninja-static",
			"inherits": ["base-ninja", "base-static", "project-base"]
		},
		{
			"name": "ninja-shared",
			"inherits": ["base-ninja", "base-shared", "project-base"]
		},
		{
			"name": "ninja-static-dev",
			"inherits": ["ninja-static", "base-dev"]
		},
		{
			"name": "ninja-shared-dev",
			"inherits": ["ninja-shared", "base-dev"]
		}
	],
	"buildPresets": [
		{
			"name": "ninja-static",
			"inherits": ["base-default"],
			"configurePreset": "ninja-static"
		},
		{
			"name": "ninja-shared",
			"inherits": ["base-default"],
			"configurePreset": "ninja-shared"
		},
		{
			"name": "ninja-static-dev",
			"inherits": ["base-default"],
			"configurePreset": "ninja-static-dev"
		},
		{
			"name": "ninja-shared-dev",
			"inherits": ["base-default"],
			"configurePreset": "ninja-shared-dev"
		}
	],
	"testPresets": [
		{
			"name": "ninja-static",
			"inherits": ["base-default"],
			"configurePreset": "ninja-static"
		},
		{
			"name": "ninja-shared",
			"inherits": ["base-default"],
			"configurePreset": "ninja-shared"
		},
		{
			"name": "ninja-static-dev",
			"inherits": ["base-default"],
			"configurePreset": "ninja-static-dev"
		},
		{
			"name": "ninja-shared-dev",
			"inherits": ["base-default"],
			"configurePreset": "ninja-shared-dev"
		}
	],
	"workflowPresets": [
		{
			"name": "ninja-static",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-static"
				},
				{
					"type": "build",
					"name": "ninja-static"
				},
				{
					"type": "test",
					"name": "ninja-static"
				}
			]
		},
		{
			"name": "ninja-shared",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-shared"
				},
				{
					"type": "build",
					"name": "ninja-shared"
				},
				{
					"type": "test",
					"name": "ninja-shared"
				}
			]
		},
		{
			"name": "ninja-static-dev",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-static-dev"
				},
				{
					"type": "build",
					"name": "ninja-static-dev"
				},
				{
					"type": "test",
					"name": "ninja-static-dev"
				}
			]
		},
		{
			"name": "ninja-shared-dev",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-shared-dev"
				},
				{
					"type": "build",
					"name": "ninja-shared-dev"
				},
				{
					"type": "test",
					"name": "ninja-shared-dev"
				}
			]
		}
	]
}

