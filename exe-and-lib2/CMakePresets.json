{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25
	},
	"include": [
		"../CMakePresetsBase.json"
	],
	"configurePresets": [
		{
			"name": "project-base",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_PREFIX_PATH": "${sourceDir}/../install",
				"lib2_BUILD_WITH_PIC": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "ninja-release-static",
			"inherits": ["base-ninja-release", "base-static", "project-base"]
		},
		{
			"name": "ninja-debug-static",
			"inherits": ["base-ninja-debug", "base-static", "project-base"]
		},
		{
			"name": "ninja-release-shared",
			"inherits": ["base-ninja-release", "base-shared", "project-base"]
		},
		{
			"name": "ninja-debug-shared",
			"inherits": ["base-ninja-debug", "base-shared", "project-base"]
		}
	],
	"buildPresets": [
		{
			"name": "ninja-release-static",
			"inherits": ["base-ninja-release"],
			"configurePreset": "ninja-release-static"
		},
		{
			"name": "ninja-debug-static",
			"inherits": ["base-ninja-debug"],
			"configurePreset": "ninja-debug-static"
		},
		{
			"name": "ninja-release-shared",
			"inherits": ["base-ninja-release"],
			"configurePreset": "ninja-release-shared"
		},
		{
			"name": "ninja-debug-shared",
			"inherits": ["base-ninja-debug"],
			"configurePreset": "ninja-debug-shared"
		}
	],
	"workflowPresets": [
		{
			"name": "ninja-release-static",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-release-static"
				},
				{
					"type": "build",
					"name": "ninja-release-static"
				}
			]
		},
		{
			"name": "ninja-debug-static",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-debug-static"
				},
				{
					"type": "build",
					"name": "ninja-debug-static"
				}
			]
		},
		{
			"name": "ninja-release-shared",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-release-shared"
				},
				{
					"type": "build",
					"name": "ninja-release-shared"
				}
			]
		},
		{
			"name": "ninja-debug-shared",
			"steps": [
				{
					"type": "configure",
					"name": "ninja-debug-shared"
				},
				{
					"type": "build",
					"name": "ninja-debug-shared"
				}
			]
		}
	]
}

