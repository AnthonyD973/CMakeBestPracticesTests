{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25
	},
	"configurePresets": [
		{
			"name": "base-ninja",
			"hidden": true,
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build",
			"installDir": "${sourceDir}/../install/",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		},
		{
			"name": "base-ninja-release",
			"hidden": true,
			"inherits": "base-ninja",
			"displayName": "Base Release Config",
			"description": "Base Release configure with Ninja.",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "base-ninja-debug",
			"hidden": true,
			"inherits": "base-ninja",
			"displayName": "Base Debug Config",
			"description": "Base Debug configure with Ninja.",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "base-static",
			"hidden": true,
			"cacheVariables": {
				"BUILD_SHARED_LIBS": {
					"type": "BOOL",
					"value": "OFF"
				}
			}
		},
		{
			"name": "base-shared",
			"hidden": true,
			"cacheVariables": {
				"BUILD_SHARED_LIBS": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "base-ninja",
			"hidden": true,
			"jobs": 10
		},
		{
			"name": "base-ninja-release",
			"hidden": true,
			"inherits": "base-ninja",
			"configurePreset": "base-ninja-release",
			"displayName": "Base Ninja Release Build",
			"description": "Base Build with ninja in release type."
		},
		{
			"name": "base-ninja-debug",
			"hidden": true,
			"inherits": "base-ninja",
			"configurePreset": "base-ninja-debug",
			"displayName": "Base Ninja Debug Build",
			"description": "Base Build with ninja in debug type."
		}
	]
}
